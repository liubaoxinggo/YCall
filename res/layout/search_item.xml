<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_line" 
    android:id="@+id/search_item">
    <ImageView 
        android:id="@+id/logo_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/logo_ic"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/logo_photo_margin_left"
        android:layout_marginRight="@dimen/logo_photo_margin_right"
        android:layout_marginTop="@dimen/logo_photo_margin_top"
        />
	<TextView 
	    android:id="@+id/right_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/btn_bg_1"
	    android:layout_marginRight="@dimen/right_view_margin_right"
	    android:textColor="@color/c_ffffffff"
	    android:textSize="@dimen/normal_font_size_16"
	    android:text="@string/add_attention"/>
	<TextView 
	    android:id="@+id/item_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/logo_ic"
	    android:textColor="@color/c_333333"
	    android:textSize="@dimen/normal_font_size_18"
	    android:text="@string/app_name"/>
</RelativeLayout>
