<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root" >
    <include 
        android:id="@+id/top"
        layout="@layout/top_layout"/>
    <LinearLayout 
        android:id="@+id/register_ll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/normal_font_size_18"
            android:text="@string/register_country_code"
            android:padding="12dp"
            android:background="@drawable/rect_has_corner_bg"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/normal_font_size_18"
            android:drawableLeft="@drawable/equipment_management"
            android:hint="@string/register_input_phone_number_hint"
            android:textColorHint="@color/input_num_hint"
            android:drawablePadding="8dp"
            android:inputType="phone"
	        android:textCursorDrawable="@null"
	        android:cursorVisible="true"
            android:layout_marginTop="@dimen/margin_top_bottom_12"
            android:padding="12dp"
            android:background="@drawable/rect_has_corner_bg"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom_12"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/normal_font_size_16"
                android:text="@string/register_agree_and_accept_ycall"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_green_1"
                android:textSize="@dimen/normal_font_size_16"
                android:text="@string/register_service_terms"/>
        </LinearLayout>
        <Button 
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom_12"
            android:text="@string/register"
            android:textSize="@dimen/normal_font_size_18"
            android:textColor="@color/c_ffffffff"
            android:background="@drawable/btn_bg_1"/>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/register_ll_2"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="gone">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/c_333333"
	        android:textSize="@dimen/normal_font_size_16"
	        android:text="@string/register_sms_verification_code_has_send_to"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/c_333333"
	        android:textSize="@dimen/normal_font_size_16"
	        android:text="13811482346"/>
	    <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/normal_font_size_18"
            android:hint="@string/register_input_sms_verification_code_hint"
            android:textColorHint="@color/input_num_hint"
	        android:textCursorDrawable="@null"
	        android:cursorVisible="true"
            android:layout_marginTop="@dimen/margin_top_bottom_12"
            android:padding="12dp"
            android:background="@drawable/rect_has_corner_bg"/>
	    <Button 
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom_12"
            android:text="@string/submit"
            android:textSize="@dimen/normal_font_size_18"
            android:textColor="@color/c_ffffffff"
            android:background="@drawable/btn_bg_1"/>
	</LinearLayout>
	<RelativeLayout 
	    android:id="@+id/floating_layer"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone">
	    <include layout="@layout/floating_layer"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
		    android:layout_centerInParent="true"
	        android:padding="18dp">
		    <include 
		        layout="@layout/pop_view_1"/>
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>


















