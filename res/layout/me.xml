<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_f5f5f5">
        <ImageView
           android:id="@+id/me_photo" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/relationship_left_iv_margintop"
           android:layout_marginBottom="@dimen/relationship_left_iv_margintop"
           android:layout_marginLeft="@dimen/relationship_left_iv_marginleft"
           android:scaleType="centerInside"
           android:src="@drawable/account_photo_defaut"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/my_tv_marginleft"
            android:layout_gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/me_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江明"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/my_name_tv_size"/>
            <TextView 
                android:id="@+id/my_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定号码：13693647721"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/my_phone_tv_size"/>
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/line"/>
     <RelativeLayout
       android:id="@+id/rl_op_1" 
        android:layout_marginTop="8dp" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/user_line_bg_selector">
       <ImageView
           android:id="@+id/icon_left1" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="@dimen/relationship_left_iv_margintop"
           android:layout_marginLeft="@dimen/relationship_left_iv_marginleft"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/password"/>
       <ImageView
           android:id="@+id/icon_right1" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="8dp"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/arrows_icon"/>
       <TextView 
           android:id="@+id/tv_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/icon_left1"
           android:layout_marginLeft="@dimen/relationship_tv_marginleft"
           android:textColor="@color/relationship_tv"
           android:textSize="18sp"
           android:text="@string/change_password"/>
  	</RelativeLayout>
  	
   	<RelativeLayout
       android:id="@+id/rl_op_2" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/user_line_bg_selector">
       <ImageView
           android:id="@+id/icon_left2" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="@dimen/relationship_left_iv_margintop"
           android:layout_marginLeft="@dimen/relationship_left_iv_marginleft"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/equipment_management"/>
       <ImageView
           android:id="@+id/icon_right2" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="8dp"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/arrows_icon"/>
       <TextView 
           android:id="@+id/tv_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/icon_left2"
           android:layout_marginLeft="@dimen/relationship_tv_marginleft"
           android:textColor="@color/relationship_tv"
           android:textSize="18sp"
           android:text="@string/equipment_management"/>
  	</RelativeLayout>
   	<RelativeLayout
       android:id="@+id/rl_op_3" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/user_line_bg_selector">
       <ImageView
           android:id="@+id/icon_left3" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
          android:layout_marginTop="@dimen/relationship_left_iv_margintop"
           android:layout_marginLeft="@dimen/relationship_left_iv_marginleft"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/free_setting"/>
       <ImageView
           android:id="@+id/icon_right3" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="8dp"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/arrows_icon"/>
       <TextView 
           android:id="@+id/tv_3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/icon_left3"
           android:layout_marginLeft="@dimen/relationship_tv_marginleft"
           android:textColor="@color/relationship_tv"
           android:textSize="18sp"
           android:text="@string/free_setting"/>
  	</RelativeLayout>
   	<RelativeLayout
       android:id="@+id/rl_op_4" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/group_bottom_bg">
       <ImageView
           android:id="@+id/icon_left4" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="@dimen/relationship_left_iv_margintop"
           android:layout_marginLeft="@dimen/relationship_left_iv_marginleft"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/blacklist"/>
       <ImageView
           android:id="@+id/icon_right4" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="8dp"
           android:layout_centerVertical="true"
           android:scaleType="centerInside"
           android:src="@drawable/arrows_icon"/>
       <TextView 
           android:id="@+id/tv_4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/icon_left4"
           android:layout_marginLeft="@dimen/relationship_tv_marginleft"
           android:textColor="@color/relationship_tv"
           android:textSize="18sp"
           android:text="@string/blacklist"/>
  	</RelativeLayout>
	<include layout="@layout/line"/>
</LinearLayout>
