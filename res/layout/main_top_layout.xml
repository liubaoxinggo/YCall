<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_h"
    android:background="@color/top_bg" >
    <TextView 
        android:id="@+id/top_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:text="@string/app_name"
        android:textSize="@dimen/top_left_tv_font_size"
        android:textColor="@color/c_ffffffff"/>
	<RelativeLayout 
	    android:id="@+id/top_right_layout_1"
	    android:layout_width="@dimen/top_right_rl_size"
	    android:layout_height="@dimen/top_right_rl_size"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/btn_bg_2">
	    <ImageView 
	        android:layout_width="@dimen/top_iv_size"
	        android:layout_height="@dimen/top_iv_size"
	        android:layout_centerInParent="true"
	        android:scaleType="centerInside"
	        android:src="@drawable/nav_message"/>
	    <TextView 
	        android:id="@+id/top_right_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/unread_bg_small"
	        android:textSize="@dimen/top_right_tv_unread_font_size"
	        android:text="10+"
	        android:visibility="invisible"/>
	</RelativeLayout>
    <ImageView
	    android:id="@+id/top_right_search"
	    android:layout_width="@dimen/top_iv_size"
	    android:layout_height="@dimen/top_iv_size"
	    android:scaleType="centerInside"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="@dimen/top_right_rl_size"
	    android:src="@drawable/nav_search"
	    android:background="@drawable/btn_bg_2"/>
</RelativeLayout>























