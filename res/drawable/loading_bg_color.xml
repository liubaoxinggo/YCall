<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
		    <!-- 描边 -->
		    <stroke android:width="0px" android:color="#5c6a84" />
		    <!-- 圆角 -->
		    <corners android:radius="5dp"/>
		    <!-- 渐变 -->
		    <gradient
		        android:startColor="@color/loading_dialog_bg"
		        android:endColor="@color/loading_dialog_bg"
		        android:angle="90"/>
		    <padding
		         android:left="@dimen/dialog_view_padding_left_right" 
		         android:top="@dimen/dialog_view_padding_top_bottom"
		         android:right="@dimen/dialog_view_padding_left_right" 
		         android:bottom="@dimen/dialog_view_padding_top_bottom" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
		    <!-- 描边 -->
		    <stroke android:width="0px" android:color="#5c6a84" />
		    <!-- 圆角 -->
		    <corners android:radius="5dp"/>
		    <!-- 渐变 -->
		    <gradient
		        android:startColor="@color/loading_dialog_bg"
		        android:endColor="@color/loading_dialog_bg"
		        android:angle="90"/>
		    <padding
		         android:left="@dimen/dialog_view_padding_left_right" 
		         android:top="@dimen/dialog_view_padding_top_bottom"
		         android:right="@dimen/dialog_view_padding_left_right" 
		         android:bottom="@dimen/dialog_view_padding_top_bottom" />
        </shape>
    </item>

</selector>
